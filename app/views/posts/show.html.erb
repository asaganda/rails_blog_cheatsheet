<!-- this fixes the formatting so that each individual post looks better-->
<div id="post_content">
	<!-- show title, date/time(when the post was submitted at) and body of the post -->
	<h1 class="title">
		<%= @post.title %>
	</h1>

	<p class="date">
		<!-- will show submitted time... and grab post -->
		<!-- the line after the pipe "|" adds the ability for us to edit the post which brings us to the edit form -->
		Submitted <%= time_ago_in_words(@post.created_at) %> Ago
		| <%= link_to 'Edit', edit_post_path(@post) %>
		| <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
	</p>

	<p class="body">
		<%= @post.body %>
	</p>
</div>